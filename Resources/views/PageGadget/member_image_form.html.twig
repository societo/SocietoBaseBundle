{% extends skin_template_path('normal_gadget.html.twig') %}

{% block caption %}{{ gadget.caption }}{% endblock %}
{% block content %}


<form action="{{ path('post_member_image', {'gadget': gadget}) }}" method="post" {{ form_enctype(form) }}>
    {{ form_errors(form) }}
    <table>
        <tr>
            <th>{{ form_label(form.file, "Image File") }}</th>
            <td>
                {{ form_errors(form.file) }}
                <p><img src="{{ path('show_resized_member_image', {'member': member, 'width': 100, 'height': 100}) }}" class="icon"></p>
                {{ form_widget(form.file) }}
            </td>
        </tr>
        {{ form_rest(form) }}
    </table>
    <button type="submit">Save</button>
</form>
{% endblock %}
